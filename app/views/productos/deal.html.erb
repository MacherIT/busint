<li id="deal-<%= deal.id %>" class="deal">
  <div class="deal deal-empresa">
    <span class="empresa"><%= deal.empresa %></span>
    <span class="deal-user"><%= deal.user %></span>
  </div>
  <div class="deal deal-contenido">
    <span class="producto"><%= link_to deal.producto.nombre, producto_path(deal.producto.id) %></span>
    <span class="probabilidad"> - <%= deal.probabilidad %>%</span>
    <span class="estado estado-<%= deal.estado.parameterize('_') %>"><%= deal.estado %></span>
  </div>
  <div class="deal deal-fechas">
    <span class="creacion">Creado: <%= deal.created_at.to_formatted_s(:d_m_y) %></span>
    <span class="modificado"> - Ãšltimos cambios: <%= deal.updated_at.to_formatted_s(:d_m_y) %></span>
  </div>
</li>
