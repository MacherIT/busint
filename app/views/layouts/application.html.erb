<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim'%>
  </head>
  <body>
    <!-- If not logged-->
    <% if not logged_in? %>
      <%= render 'not_logged_in' %>
    <% else %>
      <!-- If logged -->
      <!-- <%= render 'layouts/header'%> -->
      <div class="container-fluid" id="cuerpo">
	<!-- Row Superior -->
	<div class="row">
	  <div id="contr-logo" class="col-sm-2">
	    <%= link_to image_tag("macher.png", alt: "BusInt"), root_path, id: "logo" %>
	  </div>
	  <div id="contr-notificaciones" class="col-sm-7">
	    NOTIFICACIONES
	  </div>
	  <div id="contr-iconos" class="col-sm-3">
	    ICONOS PARA ACCIONES COMUNES
	  </div>
	</div>
	<!-- Row Principal -->
	<div id="main-row" class="row">
	  <div id="contr-sidebar" class="col-sm-2">
	    <div class="">
	      <div id="contr-user-card">
		<%= render 'users/user_card' %>
	      </div>
	      <div class="divider"></div>
	      <div id="contr-main-menu">
		<%= render 'layouts/main_menu' %>
	      </div>
	    </div>
	  </div> <!-- /contr-sidebar -->
	  <div id="contr-main-body" class="col-sm-10">
	    <!-- <div class="modulo"> -->
	      <% flash.each do |message_type, message| %>
              <div class="modulo alert alert-<%= message_type %>">
		<%= message %>
	      </div>
	      <% end %>
	      <!-- Contenido -->
	      <%= yield %>
	  <!-- </div> -->
	  </div>
	</div>
	<div id="contr-footer">
	  <%= render 'layouts/footer' %>
	</div>
      </div>
      <%= debug(params) if Rails.env.development? %>
    <% end %>
  </body>
</html>
