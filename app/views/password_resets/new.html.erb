<% provide(:title, "Contraseña olvidada") %>
<h1>Contraseña olvidada</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group"> 
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      </div>
      <%= f.submit "Enviar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
