<% provide(:title, 'Reseteo de contrseña') %>
<h1>Reseteo de contrseña</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id]), html: { class: "form-horizontal", role: "form" }) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <div class="form-group"> 
	<%= f.label :password, "Contraseña nueva" %>
	<%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group"> 
	<%= f.label :password_confirmation, "Repetí la contraseña nueva" %>
	<%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit "Update password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
