<% provide(:title, "Logueate") %>
<h1>Logueate</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: loguearse_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Contraseña" %>
      <%= link_to "¿Olvidaste tu contraseña?", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Recordarme.</span>
      <% end %>


      <%= f.submit "Entrar", class: "btn btn-primary" %>
    <% end %>

    <p>¿Sos nuevo? ¡Bienvenido! Primero <%= link_to "registrate.", registrarse_path %></p>
  </div>
</div>
