<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.deals.any? %>
      <h3>Deals (<%= @user.deals.count %>)</h3>
      <ol class="deals">
        <%= render @deals %>
      </ol>
      <%= will_paginate @deals %>
    <% end %>
  </div>
</div>
