<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user, size:300, class:"gravatar-100px") %>
        <%= @user.name %>
      </h1>
    </section>
    <% if @user == current_user %>
      <section class="deal_form">
	<h3 class="verde">Nuevo deal</h3>
	<%= render 'shared/deal_form' %>
      </section>
    <% end %>
  </aside>
  <div class="col-md-8">
    <% if @user.deals.any? %>
      <div class="deals-propios">
	<h3>Deals propios (<%= @user.deals.count %>)</h3>
	<ol class="deals list-group">
          <%= render partial: 'shared/deal', collection: @deals, as: :deal, locals: {role: :dueno} %>
	</ol>
	<%= will_paginate @deals %>
      </div>
    <% end %>
    <% if @codeals.any? %>
      <div class="codeals">
	<h3>Participaciones (<%= @codeals.count %>)</h3>
	<ol class="deals list-group">
          <%= render partial: 'shared/deal', collection: @codeals, as: :deal, locals: {role: :companero} %>
	</ol>
	<%= will_paginate @codeals %>
      </div>
    <% end %>
  </div>
</div>
