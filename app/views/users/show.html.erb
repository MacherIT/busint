<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user, size:300, class:"gravatar-100px") %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <section class="user_btns">
      <%= render 'user_btns' %>
    </section>
  </div>

<% if false %>
    <% if @user == current_user %>
      <section class="deal_form">
	<h3 class="verde">Nuevo deal</h3>
	<%= render 'shared/deal_form' %>
      </section>
    <% end %>
<% end %>
  </aside>
</div>

<% if @user.deals.any? %>
  <div class="deals-propios">
    <h3>Deals propios (<%= @user.deals.count %>)</h3>
    <table class="table table-condensed tabla-deals">
      <theader></theader>
	<%= render partial: 'shared/deal', collection: @deals, as: :deal, locals: {role: :dueno} %>
    </table>
	
<% if false %>
  <ol class="deals list-group">
      <%= render partial: 'shared/deal', collection: @deals, as: :deal, locals: {role: :dueno} %>
    </ol>
<% end %>

  </div>
<% end %>

<% if @codeals.any? %>
  <div class="codeals">
    <h3>Participaciones (<%= @codeals.count %>)</h3>
    <table class="table table-condensed tabla-codeals">
      <theader></theader>
	<%= render partial: 'shared/deal', collection: @codeals, as: :deal, locals: {role: :companero} %>
    </table>
  </div>
<% end %>

</div>
