<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user, size:300, class:"gravatar-100px") %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <section class="user_btns">
    <% if @user == current_user %>
      <%= render 'user_btns' %>
    <% end %>
    </section>
  </div>

<% if @user.deals.any? %>
  <div class="deals-propios">
    <h3>Deals propios (<%= @user.deals.count %>)</h3>
    <table class="table table-condensed tabla-deals">
      <theader></theader>
	<%= render partial: 'shared/deal', collection: @deals, as: :deal %>
    </table>
	
  </div>
<% end %>

<% if @codeals.any? %>
  <div class="codeals">
    <h3>Participaciones (<%= @codeals.count %>)</h3>
    <table class="table table-condensed tabla-codeals">
      <theader></theader>
	<%= render partial: 'shared/deal', collection: @codeals, as: :deal, locals: {role: :companero} %>
    </table>
  </div>
<% end %>

</div>
