<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user, size:300, class:"gravatar-100px") %>
        <%= @user.name %>
      </h1>
    </section>
    <% if @user == current_user %>
      <section class="deal_form">
	<h3 class="verde">Nuevo deal</h3>
	<%= render 'shared/deal_form' %>
      </section>
    <% end %>
  </aside>
  <div class="col-md-8">
    <% if @user.deals.any? %>
      <h3>Deals propios (<%= @user.deals.count %>)</h3>
      <ol class="deals list-group">
        <%= render @deals %>
      </ol>
      <%= will_paginate @deals %>
    <% end %>

    <% if false %>
    <% if @user.participacions.any? %>
      <h3>Participaciones (<%= @user.participacions.count %>)</h3>
      <ol class="deals list-group">
        <%= render 'shared/deal', collection: @participacions %>
      </ol>
      <%= will_paginate @participacions %>
    <% end %>
<% end %>


  </div>
</div>
