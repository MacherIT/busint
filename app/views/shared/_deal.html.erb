<li id="deal-<%= deal.id %>" class="deal">
  <div class="deal deal-empresa">
    <span class="empresa">
      <% if current_user && ( deal.user == current_user or
	                      deal.cousers.include?(current_user) )%>
        <%= link_to deal.empresa, edit_deal_url(deal.id) %>
      <% else %>
        <%= deal.empresa %>
      <% end %>
    </span>
    <% if not @user or deal.cousers.include?(current_user) %>
      <span class="deal-user"> - <%= deal.user.name %></span>
    <% end %>
  </div>
  <div class="deal deal-contenido">
    <span class="producto">
      <% if @user %>
        <%= link_to deal.producto.nombre, producto_path(deal.producto.id) %>
      <% end %>
    </span>
    <span class="probabilidad">
      <% if p = deal.probabilidad %>
        <% if @user %> - <% end %>
	<%= deal.probabilidad %>%
      <% end %>
    <span class="estado estado-<%= deal.estado.parameterize('_') %>"><%= deal.estado %></span>
  </div>
  <% if deal.participacions.any? %>
    <div class="deal deal-companeros">
      <span class="etiqueta">Compañeros:</span>
      <% deal.participacions.each do |p| %>
        <% if @user != p.user %><span class="companero"><%= p.user.name %> - </span><% end %>
      <% end %>
    </div>
  <% end %>
  <div class="deal deal-fechas">
    <span class="creacion"><span class="etiqueta">Creado: </span><%= deal.created_at.to_formatted_s(:d_m_y) %></span>
    <span class="modificado"><span class="etiqueta"> - Últimos cambios: </span><%= deal.updated_at.to_formatted_s(:d_m_y) %></span>
  </div>
</li>
